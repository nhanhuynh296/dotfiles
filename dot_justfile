    uv run /home/nathan-huynh/work/cooking-test-automation/modules/test_box_io/test_box_io_interactive.py
    # python3 $HOME/testbox_reset.py

kill port:
    sudo fuser -k "{{ port }}/tcp"

update:
    sudo apt update && sudo apt upgrade && sudo apt autoremove && sudo apt autoclean
    uv tool upgrade --all
    npm update -g

[working-directory('/home/nathan-huynh/work/cook-ui-tft-backend-simulator')]
